	@echo " ██   ██ ██   ██ ██   ██    ██    ██   ██ ██   ██    ██    ██ "
	@echo " █████   ██████  ██   ██    ██     ██████ ██   ██    ██    ██ "
	@echo "                                                               "
	@echo "                                                               "
	@echo "" # Línea en blanco después del tercer arte

# ====================================================================
# FIN DE LAS LINEAS PARA EL ARTE ASCII
# ====================================================================


$(LIBFT):
	@echo "Building libft..."
	@$(MAKE) -C $(LIBFT_DIR)

$(NAME) : $(ARCHIVE) $(LIBFT)
	$(CC) $(CFLAGS) $< -L$(LIBFT_DIR) -lft -o $@

$(ARCHIVE) : $(OBJS)
	$(MAKE_LIB) $(ARCHIVE) $^

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean :
	rm -f $(OBJS) $(ARCHIVE)
	@$(MAKE) -C $(LIBFT_DIR) clean

fclean : clean
	rm -f $(NAME)
	@$(MAKE) -C $(LIBFT_DIR) fclean


re : fclean all_with_ascii # Asegúrate de que 're' también llame al target que muestra el ASCII.

.PHONY : all clean fclean re all_with_ascii